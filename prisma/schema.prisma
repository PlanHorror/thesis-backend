generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        

model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Student {
  id        String   @id @default(cuid())
  department Department @relation("DepartmentStudents", fields: [departmentId], references: [id])
  departmentId String
  email     String   @unique
  username  String   @unique
  password  String
  studentId String?  @unique
  fullName  String?
  gender    Boolean?
  birthDate String?
  citizenId String?  @unique
  phone     String?  @unique
  address   String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Teacher {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String
  fullName  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  departmentHeads Department[] @relation("DepartmentHead")
}

model Department {
  id          String   @id @default(cuid())
  head       Teacher? @relation("DepartmentHead", fields: [headId], references: [id])
  headId     String?
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  students    Student[]  @relation("DepartmentStudents")
}